<?xml version="1.0" encoding="utf-8"?>
<e107Plugin name="Mentions" lan="" version="1.3.12" date="2017-07-17" compatibility="2.0" installRequired="true" >
	<author name="Arun S. Sekher" url="https://github.com/arunshekher" />
	<summary>An @mention plugin</summary>
	<description lan="">It provides Twitter or GitHub like '@username' mention functionality for e107.</description>
	<category>misc</category>
	<keywords>
		<word>mentions</word>
		<word>user</word>
		<word>content</word>
	</keywords>
	<adminLinks>
		<link url='admin_config.php' description='Configure Mentions Plugin' icon='images/mentions_32.png' iconSmall='images/mentions_16.png' icon128="images/mentions_128.png" primary='true' >LAN_CONGIGURE</link>
		<link url="admin_config.php?mode=options" description="Configure Mentions Prefs" icon="manage" >Mention Prefs</link>
	</adminLinks>
	<pluginPrefs>
		<pref name="mentions_active">1</pref>
		<pref name="mentions_contexts">1</pref>
		<pref name="use_global_path">0</pref>
		<pref name="atwho_min_char">2</pref>
        <pref name="atwho_max_char">15</pref>
        <pref name="atwho_item_limit">5</pref>
        <pref name="atwho_highlight_first">true</pref>
		<pref name="notify_chatbox_mentions">false</pref>
		<pref name="notify_comment_mentions">false</pref>
		<pref name="notify_forum_mentions">false</pref>
		<pref name="email_subject_line">You were mentioned by {MENTIONER}</pref>
	</pluginPrefs>
</e107Plugin>
